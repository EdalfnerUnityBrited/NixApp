<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/image_preview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="360dp"></ja.burhanrashid52.photoeditor.PhotoEditorView>

   <HorizontalScrollView
       android:layout_alignParentBottom="true"
       android:fillViewport="true"
       android:measureAllChildren="false"
       android:scrollbars="none"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       
       <LinearLayout
           android:padding="10dp"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_filters_list"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_image_filter"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>
                   
                   <TextView
                       android:text="Filtros"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_edit_card"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_edit_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Editar"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_brush"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_brush"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Brocha"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_emoji"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_emoji"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Emoji"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_text_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_texto_editor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Texto"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_image_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_image_add_editor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Imagen"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_frame_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_marcos"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Marco"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_crop_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_crop"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Cortar"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_shape_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_pescao"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="Figura"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_qr_editor"
               android:padding="16dp"
               android:layout_marginLeft="8dp"
               app:cardBackgroundColor="@color/card_editor_backgroud"
               android:layout_width="80dp"
               android:layout_height="80dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/ic_qr"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:text="QR"
                       android:textStyle="bold"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </LinearLayout>

   </HorizontalScrollView>

</RelativeLayout>
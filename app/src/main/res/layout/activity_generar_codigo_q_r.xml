<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoclaro"
    tools:context=".UI.usuario.creadorInvitaciones.GenerarCodigoQR">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Inserte el enlace:"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/enlace_qr_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/enlace_qr_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="232dp"
        android:hint="www.google.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <Button
        android:background="@drawable/custombutom2"
        android:textColor="@drawable/butom_text"
        android:id="@+id/crear_qr_activity"
        android:text="Generar el cÃ³digo QR"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enlace_qr_activity"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>
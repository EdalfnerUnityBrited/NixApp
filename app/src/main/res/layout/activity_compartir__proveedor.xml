<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.usuario.misEventos.CrearEvento"
    android:background="@drawable/fondoeventos"
    >

    <RelativeLayout
        android:id="@+id/fragment_container_mis_eventos"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Nuevo Evento"
            app:titleTextColor="#ffffffff"></androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Imagen para compartir"
                        android:textColor="#EFE8E8"

                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#EFE8E8" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow">


                        <TextView
                            android:id="@+id/Agregarinvitacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:text="Elige la imagen Publicitaria: "
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"/>

                        <Button
                            android:id="@+id/buttonBuscarInvitacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/custombutom2"
                            android:text="Buscar"
                            android:textAlignment="gravity"
                            android:padding="5dp"
                            android:textColor="@drawable/butom_text" />

                    </TableRow>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/verInvitacion"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:contentDescription="Intento"
                        app:srcCompat="@drawable/compromisos"
                        tools:visibility="gone" />

                    <ImageView
                        android:id="@+id/verInvitacion2"
                        android:layout_marginTop="12dp"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:contentDescription="Intento"
                        app:srcCompat="@drawable/compromisos"
                        tools:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/borderrow">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >


                        <TextView
                            android:id="@+id/invitados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical"
                            android:text="Correos:"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/correos"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:backgroundTint="@color/white"
                            />

                        <Button
                            android:id="@+id/correoAgregado"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/custombutom2"
                            android:text="AÃ±adir"
                            android:textAlignment="gravity"
                            android:textColor="@drawable/butom_text"
                            />

                    </TableRow>

                    <TextView
                        android:id="@+id/mostrarCorreos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/borderrow">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/compartirTexto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Compartir con:"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/face"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/facebook" />
                        <Button
                            android:id="@+id/EnviarCorreo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/enviar_correo"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />
                        <Button
                            android:id="@+id/Whatsapp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/logowh"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />
                        <com.facebook.share.widget.ShareButton
                            android:id="@+id/fb_share_button"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorPrimary"
                            android:visibility="invisible"
                            />

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/eventoTerminado"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custombutom2"
                        android:text="Compartir Imagen"
                        android:textAlignment="gravity"
                        android:textColor="@drawable/butom_text" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
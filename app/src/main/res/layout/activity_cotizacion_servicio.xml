<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.usuario.misEventos.CotizacionPorServico.CotizacionServicio">

    <RelativeLayout
        android:id="@+id/fragment_container_infoservicios_proveedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoclaro">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Contratacion del servicio"
            app:titleTextColor="#ffffffff"></androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Informacion del servicio"
                        android:textColor="#EFE8E8"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#EFE8E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/nombre_servicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Nombre: "
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:hint="Servicio Genial"
                            android:inputType="textPersonName"
                            android:maxLength="30"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="20dp" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow">

                        <TextView
                            android:id="@+id/categoria_servicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Categoria: "
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_vertical"/>

                        <Spinner
                            android:id="@+id/spinnerSimple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/direccion_servicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Direccion: "
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/direccion_nuevoservicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:hint="Calle: ---- 111, Col: -----"
                            android:inputType="textPersonName"
                            android:maxLength="100"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="20dp" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/borderrow"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/municipios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Municipio: "
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/municipios_nombres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"/>

                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/telefono_servicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Telefono: "
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:id="@+id/telefonoProveedor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:hint="3314633635"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="20sp" />


                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/borderrow"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/nombre_proveedor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Nombre Proveedor: "
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/nombre_p"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:hint="Paquito BB"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="20dp" />
                    </TableRow>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/borderrow">
                    <TextView
                        android:id="@+id/text_horario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Dias de la semana que se laborarÃ¡:"
                        android:textColor="#EFE8E8"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="5dp">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#EFE8E8" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center_horizontal">

                        <CheckBox
                            android:id="@+id/checkBox_Lunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lunes"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Martes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Martes"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Miercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miercoles"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Jueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jueves"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Viernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viernes"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Sabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sabado"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:id="@+id/checkBox_Domingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domingo"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            />
                    </TableRow>
                    <TextView
                        android:id="@+id/text_Tiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Horario: (24 HRS)"
                        android:textColor="#EFE8E8"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="5dp">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#EFE8E8" />
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/borderrow">


                        <TextView
                            android:id="@+id/horario_del_servicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Desde las: "
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/hora_inicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="textPersonName"
                            android:text="14:00"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/hora_fin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="hasta las: "
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:id="@+id/hora_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="textPersonName"
                            android:text="01:00"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </TableRow>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderrow"
                android:padding="10dp">
                <TextView
                    android:id="@+id/estrellas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Numero de estrellas:  "
                    android:textColor="#EFE8E8"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <RatingBar
                    android:id="@+id/ratingestrellas"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_art"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Articulos del servicio"
                    android:textColor="#EFE8E8"
                    android:textSize="22sp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#EFE8E8" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recicler_servicios_Articulos"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_paq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Paquetes del servicio"
                        android:textColor="#EFE8E8"
                        android:textSize="22sp"
                        android:textStyle="bold">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#EFE8E8" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recicler_servicios_Paquetes"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"                        android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/borderrow">
                    <TextView
                        android:id="@+id/texto_normie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Precio Final:  "
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/signo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="$"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/precioTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="00"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/Mexicanos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="  MXN"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:textColor="@android:color/black" />
                </TableRow>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/servicioGuardado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutom2"
                        android:layout_marginRight="20dp"
                        android:text="Guardar Cotizacion"
                        android:textAlignment="gravity"
                        android:textColor="@drawable/butom_text"
                        android:padding="8dp"/>
                    <Button
                        android:id="@+id/agregarArticulos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutom2"
                        android:text="Agregar articulos"
                        android:layout_marginRight="20dp"
                        android:textAlignment="gravity"
                        android:textColor="@drawable/butom_text"
                        android:padding="8dp"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/servicioContratado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutom2"
                        android:text="Contratar Servicio"
                        android:textAlignment="gravity"
                        android:textColor="@drawable/butom_text"
                        android:padding="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
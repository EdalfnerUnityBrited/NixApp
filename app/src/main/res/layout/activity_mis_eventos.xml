<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MisEventos"

    >
    <FrameLayout
        android:id="@+id/fragment_container_mis_eventos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu_abajo_mis_eventos"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:title="Mis Eventos"

            app:titleTextColor="#ffffffff"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></androidx.appcompat.widget.Toolbar>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_abajo_mis_eventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_abajo_mis_eventos"
        android:background="?android:attr/windowBackground"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>
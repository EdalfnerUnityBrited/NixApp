<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondoclaro">

    <RelativeLayout
        android:id="@+id/fragment_container_ayuda"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:title="Ayuda"

            app:titleTextColor="#ffffffff"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/titulo_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:text="Preguntas Frecuentes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titulo_texto"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cuadro_ayuda"
                android:layout_marginTop="6dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/pregunta1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/custombutom3"
                            android:drawableRight="@drawable/ic_flecha_derecha"
                            android:textColor="@drawable/butom_text"
                            android:text="¿Como se crea un evento?"
                            android:textAllCaps="false"
                            android:textSize="16sp">
                        </Button>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/pregunta2"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custombutommedio"
                            android:drawableRight="@drawable/ic_flecha_derecha"
                            android:textColor="@drawable/butom_text"
                            android:text="¿Como puedo invitar a usuarios a mi evento?"
                            android:textAllCaps="false"
                            android:textSize="16sp">
                        </Button>
                    </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta3"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Como funciona la contratacion de servicios para los eventos?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta4"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Como cambio mi foto de perfil?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta5"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Como creo una invitacion para mi evento?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta6"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Como se envia la invitacion al correo?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta7"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Como confirmo mi asistencia mi asistencia a un evento?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta8"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Cuales son los requisitos para que mi evento este en la seccion 'Tendencias'?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta9"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Que pasa si el servicio que contraté no llega a mi evento?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta10"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Cual es el porcentaje del costo total que se paga en el deposito?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta11"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutommedio"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Se guarda la informacion de mi tarjeta de alguna manera?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pregunta12"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombutom4"
                        android:drawableRight="@drawable/ic_flecha_derecha"
                        android:textColor="@drawable/butom_text"
                        android:text="¿Cuales son los correos de contacto directo con 'Soporte'?"
                        android:textAllCaps="false"
                        android:textSize="16sp">
                    </Button>
                </TableRow>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>